    <script>
     let cantPendientesTotal = 0; 
     var connection = new signalR.HubConnectionBuilder()
    .withUrl("/ventasPendientes")
    .build();

    connection.start().then(() => console.log("conectado"))
    .catch((err) => console.error(err)); 

    connection.on("Receive", (venta) => {

            var itemPedidolist = ""; 
            venta.forEach((element) => {
            itemPedidolist += "<div class=\"notifi__item\" >" +
                "<div class=\"bg-c3 img-cir img-40\">" +
                    "<i class=\"zmdi zmdi-file-text\"></i>" +
                 "</div>" +
                    "<div class=\"content\">" +
                        "<p>"+element.nroPedido+"</p>" +
                        "<span class=\"date\">"+element.fechaVenta+"</span>" +
                    "</div>" +
                "</div>";

            });
            if (itemPedidolist == "") {
                document.getElementById("notificationIcon").classList.remove('has-noti');
                document.getElementById("contetNofiti").innerHTML = "No hay pedidos pendientes"; 
            } else {
                document.getElementById("notificationIcon").classList.add('has-noti');
                document.getElementById("contetNofiti").innerHTML = itemPedidolist;
            }
            
    }); 

