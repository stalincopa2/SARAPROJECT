@model SARAPROJECT.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProducto" />
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodProducto" class="control-label"></label>
                <input asp-for="CodProducto" class="form-control" />
                <span asp-validation-for="CodProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreProducto" class="control-label"></label>
                <input asp-for="NombreProducto" class="form-control" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label"></label>
                <input name="Costo" class="form-control"  required/>
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input name="Precio" class="form-control" required/>
                <span asp-validation-for="Precio" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="ImpuestoProd" class="control-label"></label>
                <input asp-for="ImpuestoProd" class="form-control" />
                <span asp-validation-for="ImpuestoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoProducto" class="control-label"></label>
                <input asp-for="FotoProducto" class="form-control" />
                <span asp-validation-for="FotoProducto" class="text-danger"></span>
            </div>

              @{
                var imgsrc = "/Content/imgProducts/"+ Model.FotoProducto;
              }
            <img src="@imgsrc" style="max-width:100px; max-height:100px;" />
            <div class="form-group">
                <label asp-for="FotoProducto" class="control-label"></label>
                <input type="file" name="ProducImgFile" id="ProducImgFile"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
